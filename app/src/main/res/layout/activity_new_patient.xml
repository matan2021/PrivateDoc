<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/images"
        tools:context=".MainActivity"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:editable="false"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:text="My Private Doctor"
            android:textColor="#FFC107"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NewPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:text="New Patient:"
            android:textColor="#070707"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PatientFullName"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Full Name:"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/PatientID"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="ID:"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/PatientAge"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Age:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PatientGender"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:text="Gender:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/GenderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/MaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:fontFamily="@font/aclonica"
                android:text="Male"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/FemaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="left"/>
        </RadioGroup>


        <TextView
            android:id="@+id/PatientCommunity"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:inputType="textPersonName"
            android:text="Community:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/CommunityRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/MizrahiRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Mizrahi"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:checked="true"/>


            <RadioButton
                android:id="@+id/DarkSkinnedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Dark Skinned"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/AshkenaziRadioButtonx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Ashkenazi "
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/PatientSmoke"
            android:layout_width="93dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:inputType="textPersonName"
            android:text="Smoking:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/SmokeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/SmokeRadioButton"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Yes"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:checked="true"/>


            <RadioButton
                android:id="@+id/NonSmokeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:text="NO"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="left"/>
        </RadioGroup>

        <TextView
            android:id="@+id/Indices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica"
            android:text="Indices:"
            android:textColor="#040404"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/WBC"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(WBC) White Blood Cells:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Neut"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(Neut) Neutrophil(by percentage):"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Lymph"
            android:layout_width="316dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(Lymph)Lymphocytes(by percentage):"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/RBC"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(RBC)Red Blood Cells:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/HCT"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="HCT(by percentage):"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/urea"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Urea:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/HB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(HB) Hemoglobin:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/Creatinine"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Creatinine:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Iron"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Iron:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/HDL"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="(HDL)High Density Lipoprotein:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Alkaline"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:hint="Alkaline Phosphatase:"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp" />


        <Button
            android:id="@+id/DiagnosisBtn"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/aclonica"
            android:text="Diaganosis and Export"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>
